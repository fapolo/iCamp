<% include ../partials/header %>
<% include ../partials/navbar %>


<div class="page-container">
    <h1 class="page-title">Adicionar Acampamento</h1>
    <a href="/acampamentos" class="btn btn-basic">Voltar</a>
</div>

<form class="form" action="/acampamentos" method="POST" enctype="multipart/form-data">
    <input type="text" placeholder="Nome do acampamento" name="name" class="input__text">
    <input type="file" name="img" id="img-choose" style="display:none;">
    <label for="img-choose" class="input__text input__text--img" id="img-label">Adicionar Imagem do Acampamento</label>
    <textarea placeholder="Descrição" name="desc" cols="30" rows="10" class="input__text"></textarea>
    <button class="btn btn-basic">Enviar</button>
</form>

